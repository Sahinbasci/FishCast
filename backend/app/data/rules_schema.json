{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "FishCast Rules",
  "description": "Validation schema for rules.yaml â€” 24 fishing rules",
  "type": "array",
  "minItems": 1,
  "items": {
    "type": "object",
    "required": ["id", "condition", "effects", "messageTR", "priority"],
    "properties": {
      "id": {
        "type": "string",
        "pattern": "^[a-z][a-z0-9_]*$",
        "description": "Unique rule identifier, snake_case"
      },
      "condition": {
        "type": "object",
        "minProperties": 1,
        "description": "All conditions are AND'd. Lists within a field are OR'd."
      },
      "effects": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "object",
          "required": ["applyToSpecies", "scoreBonus"],
          "properties": {
            "applyToSpecies": {
              "type": "array",
              "items": { "type": "string" },
              "minItems": 1
            },
            "scoreBonus": {
              "type": "integer"
            },
            "techniqueHints": {
              "type": "array",
              "items": { "type": "string" }
            },
            "removeFromTechniques": {
              "type": "array",
              "items": { "type": "string" }
            },
            "modeHint": {
              "type": "string",
              "enum": ["chasing", "selective", "holding"]
            },
            "noGo": {
              "type": "boolean"
            }
          },
          "additionalProperties": false
        }
      },
      "messageTR": {
        "type": "string",
        "minLength": 1
      },
      "priority": {
        "type": "integer",
        "minimum": 1,
        "maximum": 10
      }
    },
    "additionalProperties": false
  }
}
